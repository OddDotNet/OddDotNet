<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    </PropertyGroup>

    <!-- Internal proto definitions -->
    <ItemGroup>
        <Protobuf Include="Protos\greet.proto" GrpcServices="Server"/>
    </ItemGroup>

    <!-- OpenTelemetry proto definitions -->
    <ItemGroup>
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/common/v1/common.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/resource/v1/resource.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/logs/v1/logs.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/metrics/v1/metrics.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/trace/v1/trace.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/collector/logs/v1/logs_service.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/collector/metrics/v1/metrics_service.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
        <Protobuf Include="../../opentelemetry-proto/opentelemetry/proto/collector/trace/v1/trace_service.proto" GrpcServices="Server" ProtoRoot="../../opentelemetry-proto/" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Grpc.AspNetCore" Version="2.57.0"/>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
    </ItemGroup>

</Project>
